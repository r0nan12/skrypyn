<header class = 'intro-header' style="background-image: url('/home-bg.jpg')">
  <div class = 'row'>
    <%= render 'shared/flash' %>
  </div>
  <div class = 'container-fluid'>
    <div class = 'row'>
      <div class = 'site-heading'>
        <h1>My Blog</h1>
        <hr class="small">
        <span class="subheading">Blog Theme by Ruby Rails</span>
      </div>
    </div>
  </div>
  <div id = 'locale'>
    <%= link_to 'en', url_for( locale: 'en' )  %>
    <%= link_to 'ua', url_for( locale: 'uk' )  %>
  </div>
</header>