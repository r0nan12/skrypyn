<%= form_for @article do |f| %>
    <div class = 'form-group'>
      <label for = 'article_title'>Title</label>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class = 'form-group'>
      <label for = 'article_text'>Text</label>
      <%= f.text_area :text, class: 'form-control' %>
    </div>
    <% if @article.avatar? %>
        <p><%= image_tag @article.avatar.url %></p>
    <% end %>
    <p><%= f.file_field :avatar %></p>
    <div class = 'form-group'>
      <%= f.text_field :avatar_remote_url, class: 'form-control', placeholder: 'image URL' %>
    </div>
    <% if controller_name =='articles' && action_name == 'edit' %>
        <div class = 'checkbox'>
          <label>
            <%= f.check_box :delete_avatar, {}, checked_value = 'yes', unchecked_value = 'no' %>Delete avatar
          </label>
        </div>
    <% end %>
    <div class = 'form-group'>
      <label for = 'article_create_date'>Date</label>
      <div id = 'create_date'>
        <%= f.text_field  :create_date, class: 'form-control' %>
      </div>
    </div>
    <div class = 'form-group'>
      <%= f.submit 'Create article', class: 'btn btn-primary' %>Â 
    </div>
<% end %>
<%= link_to articles_path do %>
    <i class="fa fa-undo" aria-hidden="true"> Previous page</i>
<% end %>