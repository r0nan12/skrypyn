
<h1>Listing articles</h1>
<% if can? :create, Article %>
<%= link_to 'New article', new_article_path %>
    <% end %>
<table id = "all_articles">
<thead>
<th>Title</th>
<th>Text</th>
<th>Comments</th>
<th>Show artice</th>
<th>Edit</th>
<th>Delete</th>
</thead>
<% @articles.each { |f| %>
      <tbody>
<tr>
<td> <%= f.title %> </td>
  <td> ... </td>
  <td> <%= f.calculate_coments %> </td>

  <% if can? :read, Article %>
<td> <%= link_to 'Show',article_path(f) %> </td>
      <% end %>
  <% if can? :update , Article %>
<td> <%= link_to 'Edit',edit_article_path(f) %> </td>
 <% end %>
  <% if can? :destroy , Article %>
<td> <%= link_to 'Delete',article_path(f),method: :delete,data:{confirm:'Are you sure ?'} %> </td>
      <% end %>
</tr>
      </tbody>
<% } %>
</table>
