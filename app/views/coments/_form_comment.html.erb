<%= form_for([@article, @article.coments.build]) do |f| %>
    <div class = 'form-group'>
      <%= f.text_area :text, class: 'form-control', placeholder: t('comments.add_comment') %>
    </div>
    <div class = 'form-group'>
      <%= f.submit t('comments.add_comment'), class: 'btn btn-primary' %>
    </div>
<% end %>