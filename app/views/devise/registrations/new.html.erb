 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class = 'form-group'>
        <label for = 'user_email'><%= t('devise.email') %></label>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('devise.email') %>
      </div>
     <div class="form-group">
       <label for = 'user_password'><%= t('devise.password') %></label>
       <% if @minimum_password_length %>
           <em>(<%= @minimum_password_length %> <%= t('devise.characters_minimum') %>)</em>
       <% end %><br />
       <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('devise.password') %>
     </div>
     <div class="form-group">
       <label for = 'user_password_confirmation'> <%= t('devise.confirm_password') %> </label>
       <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('devise.confirm_password') %>
     </div>
     <div class="form-group">
       <%= f.submit t('devise.signup'), class: 'btn btn-success' %>
     </div>
  <% end %>

  <%= render "devise/shared/links" %>
