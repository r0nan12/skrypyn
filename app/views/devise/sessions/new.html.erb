<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class = 'form-group'>
    <label for = 'user_email'><%= t('devise.email') %></label>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('devise.email') %>
  </div>

  <div class = 'form-group'>
    <label for = 'user_password'><%= t('devise.password') %></label>
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: t('devise.password') %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class = 'checkbox'>
      <label>
        <%= f.check_box :remember_me %><%= t('devise.remember_me') %>
      </label>
    </div>
  <% end %>

  <div class = 'form-group' id = 'omniauth'>
    <%= f.submit t('devise.log_in'), class: 'btn btn-primary' %>
      <a href="/auth/facebook">
        <%= image_tag "/facebook.png", size: "40x40", alt: "Facebook" %>
      </a>
      <a href="/auth/twitter">
        <%= image_tag "/twitter.png", size: "40x40", alt: "Twitter" %>
      </a>
      <a href="/auth/google_oauth2">
        <%= image_tag "/google.png", size: "40x40", alt: "Google" %>
      </a>
  </div>
<% end %>

<%= render "devise/shared/links" %>
